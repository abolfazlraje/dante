# On systems where LD_PRELOAD is supported, if LIBRARY below contains
# any libraries libdsocks needs, you can do "socksify <program>" and
# <program> will use socks without having been relinked or recompiled.
# This will not work on statically linked binaries.

LIBRARY_DLOPEN=@LIBRARY_DLOPEN@
LIBRARY_LIBRESOLV=@LIBRARY_LIBRESOLV@
LIBRARY_LIBSOCKET=@LIBRARY_LIBSOCKET@
LIBRARY_LIBNSL=@LIBRARY_LIBNSL@
LIBDIR=@LIBRARY_PREFIX@
#XXX shared library name should be generated too (possibly including version)
LIBRARY=${SOCKS_LIBRARY-${LIBDIR}/libdsocks.so}
_RLD_LIST=@RLD_LIST@

LD_PRELOAD="${LIBRARY}${LIBRARY_DLOPEN:+ }${LIBRARY_DLOPEN}${LD_PRELOAD:+ }${LD_PRELOAD}${LIBRARY_LIBRESOLV:+ }${LIBRARY_LIBRESOLV}${LIBRARY_LIBSOCKET:+ }${LIBRARY_LIBSOCKET}${LIBRARY_LIBNSL:+ }${LIBRARY_LIBNSL}"
if test x$_RLD_LIST = x; then
    export LD_PRELOAD
else
    #XXX
    _RLD_LIST=`echo $LD_PRELOAD | sed -e 's/ /:/g'`:${_RLD_LIST}
    export _RLD_LIST
fi

LD_LIBRARY_PATH=${LD_LIBRARY_PATH}${LD_LIBRARY_PATH:+:}${LIBDIR}
export LD_LIBRARY_PATH

exec "$@"
